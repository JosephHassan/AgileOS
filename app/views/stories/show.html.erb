
    <p id="notice"><%= notice %></p>
<%= button_to '<-- Back to list of stories', stories_path , :method => :get %>
<article class="story">    
    <p>
      <strong class="form_header">#<%= @story.id%> - 
        <%= @story.title %>
      </strong>
    </p>
    
    <aside class="story_stats">
        Assigned to: <%= @story.user.full_name if @story.user != nil %><br />
        Last update: <%= @story.updated_at%>
    </aside>

    <p>
      <%= @story.description %>
    </p>
    
    <p>
      <strong>Status:</strong>
      <%= @story.status %>
    </p>
</article>
<%= button_to 'Edit', edit_story_path(@story) , :method => :get %>

<h1 class="form_header">Tasks related to this story</h1>

<%= render "tasks/show"%>
