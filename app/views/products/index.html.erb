<h1 class="form_header">Current products</h1>

<table class="table">
  <thead class="header">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="td"><%= product.title %></td>
        <td class="td"><%= product.description %></td>
        <td class="td"><%= link_to 'Show', product %></td>
        <td class="td"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="td"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

